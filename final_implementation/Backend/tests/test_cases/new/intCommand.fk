main : {Pair Int Int}
main! = state 0 (pr next! next!)

interface State S = get : S
                  | put : S -> Unit

data Pair X Y = pr X Y


fst : X -> Y -> X
fst x y = x

snd : X -> Y -> Y
snd  x y = y

next : [State Int]Int
next! = fst get! (put (get! + 1))

state : S -> <State S>X -> X
state _ x = x
state s <get -> k> = state s (k s)
state _ <put s -> k> = state s (k unit)

